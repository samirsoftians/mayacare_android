<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="@dimen/m_16"
    android:layout_marginRight="@dimen/m_16"
    android:layout_marginTop="@dimen/m_16"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rel_status"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@drawable/status_completed_background">

            <TextView
                android:id="@+id/txt_request_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_16"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="#200"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_request_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_request_id"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="17/07/2017"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_request_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_request_date"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="11:50 AM"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_request_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_request_time"
                android:layout_marginBottom="@dimen/m_16"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Pending"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/m_16"
            android:layout_marginRight="@dimen/m_16"
            android:layout_marginTop="@dimen/m_16"
            android:layout_toRightOf="@+id/rel_status"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Rohan Peshkar"
            android:textColor="@color/colorGrey"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_lbl_services"
            style="@style/MCTextView.RequestLabel"
            android:layout_below="@+id/txt_full_name"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/rel_status"
            android:text="Selected Services"/>

        <TextView
            android:id="@+id/txt_services"
            style="@style/MCTextView.RequestLabelValue"
            android:layout_below="@+id/txt_lbl_services"
            android:layout_toRightOf="@+id/rel_status"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Bank"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>