<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/layout_toolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/abl_toolbar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_our_pledge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/m_16"
                android:layout_marginTop="10sp"
                android:text="@string/page_our_pledge"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/lbl_integrity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/txt_our_pledge"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8sp"
                android:text="@string/title_integrity"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_integrity_paragraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_integrity"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/m_16"
                android:text="@string/integrity_paragraph"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/lbl_responsibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_integrity_paragraph"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8sp"
                android:text="@string/title_responsibility"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_responsibility_paragraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_responsibility"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/m_16"
                android:text="@string/responsibility_paragraph"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/lbl_patience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_responsibility_paragraph"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/m_16"
                android:layout_marginTop="8sp"
                android:text="@string/title_patience"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_patience_paragraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_patience"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/m_16"
                android:text="@string/patience_paragraph"
                android:textSize="16sp"/>
        </RelativeLayout>


    </ScrollView>
</RelativeLayout>