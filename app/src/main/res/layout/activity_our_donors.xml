<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <include layout="@layout/layout_toolbar"/>


    <TextView
        android:id="@+id/txt_our_donor"
        style="@style/MCTextView.OurDonorsTextView"
        android:layout_below="@+id/toolbar"
        android:text="@string/label_our_donor"/>

    <TextView
        android:id="@+id/txt_forbes_marshall"
        style="@style/MCTextView.OurDonorsTextView"
        android:layout_below="@+id/txt_our_donor"
        android:text="@string/label_forbes_marshall"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:id="@+id/img_foebes_marshall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_forbes_marshall"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/forbes_logo"/>

    <TextView
        android:id="@+id/txt_felix_tech_labs"
        style="@style/MCTextView.OurDonorsTextView"
        android:layout_below="@+id/img_foebes_marshall"
        android:text="@string/label_felix"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:id="@+id/img_felix"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txt_felix_tech_labs"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/felix_logo"/>

    <TextView
        android:id="@+id/txt_lbl_donate_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:text="@string/label_Donate_us"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txt_click_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txt_lbl_donate_us"
        android:text="@string/action_click"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"/>


</RelativeLayout>