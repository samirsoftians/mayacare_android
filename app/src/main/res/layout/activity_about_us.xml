<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/abl_toolbar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/m_16"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/abl_toolbar"
                android:text="@string/about_us_first_paragraph"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txt_about_us_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_about_us"

                android:layout_marginTop="16dp"
                android:autoLink="all"
                android:text="@string/about_us_second_paragraph"
                android:textSize="18sp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>