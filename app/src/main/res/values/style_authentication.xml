<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Login  page -->
    <style name="MCicon">
        <item name="android:background">@drawable/mc_icon</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_height">130dp</item>
    </style>

    <style name="MCEditText.LoginEditText">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/edt_background</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="MCButton.LongButton.LoginButton">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="MCTextView.LoginTextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--F.A.Q's page -->
    <style name="MCTextView.FAQsTextView">
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Contact Us page -->
    <style name="MCTextView.ContactUsTextView">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <!--OurDOnors page -->
    <style name="MCTextView.OurDonorsTextView">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Donate page -->

    <style name="MCTextView.DonateTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>